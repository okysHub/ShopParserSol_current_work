@model IEnumerable<ShopParser.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>
    Products
    <span class="badge">
        @ViewBag.ProdCount
    </span>
</h2>


<table class="table table-striped">
  
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImageURL)
            </th>
            <th>Details</th>
        </tr>
  
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ProductPageUrl)">See Here</a>
                </td>
                <td>
                    <img class="img-thumbnail" src=" @Html.DisplayFor(modelItem => item.ProductImageURL)" />

                </td>
                <td>

                    @Html.ActionLink("Open", "Details", new { id = item.Id }, new { @class = "btn btn-info" })

                </td>
            </tr>
        }

</table>