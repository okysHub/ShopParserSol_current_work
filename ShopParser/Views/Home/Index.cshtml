@model IEnumerable<ShopParser.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>
    Products
    <span class="badge">
        @ViewBag.ProdCount
    </span>
</h2>


<table class="table table-striped">
  
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImageURL)
            </th>
            <th>Details</th>
        </tr>
  
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuUrl)
                </td>
                <td>
                    @Html.Raw("<ul class='listul'>"+item.Description+"</ul>")



                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.ProductPageUrl)">See Here</a>
                </td>
                <td>
                    <img class="img-thumbnail" src=" @Html.DisplayFor(modelItem => item.ProductImageURL)" />

                </td>
                <td>

                    @Html.ActionLink("Open", "Details", new { id = item.Id }, new { @class = "btn btn-info" })

                </td>
            </tr>
        }

</table>
<style>
    .listul > li {
        height: 36px;
        line-height: 35px;
        color: #666;
        font-size: 5px;
        border-bottom: 2px solid #ddd;
    }

        .listul > li > span {
            display: block;
            float: left;
            min-width: 50px;
            margin-right: 10px;
            width: 160px;
            background-color: #000;
            color: #fff;
            padding-left: 15px;
        }
</style>